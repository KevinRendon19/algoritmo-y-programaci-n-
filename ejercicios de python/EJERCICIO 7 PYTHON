def ejercicio_7_metros_a_pies_pulgadas():
    # Entrada de datos
    metros = float(input("Ingresar cantidad de metros: "))

    # Conversiones
    pul = metros * 39.37
    pies = pul / 12

    # Salida
    print(f"{metros} metros equivale a {pul:.3f} pulgadas y {pies:.3f} pies.")

# Ejecutar la funci√≥n
ejercicio_7_metros_a_pies_pulgadas()